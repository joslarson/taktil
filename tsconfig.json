{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "sourceMap": false,
        "declaration": true,
        // "allowJs": true,
        "rootDir": "src",
        "baseUrl": "./src",
        "moduleResolution": "node",
        // "watch": true,
        "outDir": "./dist",
        "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost"]
    },
    "compileOnSave": false,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ]
}
